{
    "$jsonSchema": {
        "bsonType": "object",
        "required": [ "name","play_track","volume","play"],
        "properties": {
            "name": {
                "bsonType": "string",
                "description": "The name of preset"
            },
            "play_track": {
                "bsonType" : "string",
                "description": "Audio track to play"
            },
            "volume": {
                "bsonType": "int",
                "minimum": 1,
                "maximum": 100,
                "description": "Set the volume 1 - 100"
            },
            "play": {
                "bsonType": "string",
                "description": "Set to either play, pause, or stop"
            }
        }
    }
 }