{
    "$jsonSchema": {
        "bsonType": "object",
        "required": [ "name","provider","type","room","identifier","address","property"],
        "properties": {
            "name": {
                "bsonType": "string",
                "description": "Name of the light"
            },
            "provider": {
                "bsonType" : "string",
                "description": "The light provider module path"
            },
            "type": {
                "bsonType" : "string",
                "description": "The light provider class/type"
            },
            "room": {
                "bsonType" : "string",
                "description": "The room/location of the light"
            },
            "identifier": {
                "bsonType" : "string",
                "description": "Vendor specific identifier"
            },
            "address": {
                "bsonType" : "string",
                "description": "The address or location of the device as required by the vendor/type"
            },
            "property": {
                "bsonType" : "string",
                "description": "The property where the device is located"
            },
            "auth": {
                "bsonType" : "object",
                "description": "Optional used for authentication info for some providers"
            }
        }
    }
}