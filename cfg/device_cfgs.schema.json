{
    "$jsonSchema": {
        "bsonType": "object",
        "required": [ "name","provider","type","room","identifier","address","property","device_type"],
        "properties": {
            "name": {
                "bsonType": "string",
                "description": "Name of the device"
            },
            "provider": {
                "bsonType" : "string",
                "description": "The device provider module path"
            },
            "type": {
                "bsonType" : "string",
                "description": "The device provider class/type"
            },
            "room": {
                "bsonType" : "string",
                "description": "The room/location of the device"
            },
            "identifier": {
                "bsonType" : "string",
                "description": "Vendor specific identifier"
            },
            "address": {
                "bsonType" : "string",
                "description": "The address or location of the device as required by the vendor/type"
            },
            "property": {
                "bsonType" : "string",
                "description": "The property where the device is located"
            },
            "auth": {
                "bsonType" : "object",
                "description": "Optional used for authentication info for some providers"
            },
            "device_type": {
                "bsonType" : "string",
                "description": "Type of device. (light, switch, etc.."
            }
        }
    }
}